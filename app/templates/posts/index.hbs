<h1>
  Listing Posts
  {{link-to 'New Post' 'posts.new' class="pull-right btn btn-primary"}}
</h1>
<div class="table-responsive">
  <table class="table table-hover table-striped mt_30">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |post|}}
        {{#link-to 'posts.post' post tagName="tr" class="cursor_p"}}
          <td>{{post.id}}</td>
          <td>{{post.title}}</td>
          <td>{{post.created_at}}</td>
          <td>Ver/Apagar</td>
        {{/link-to}}
      {{else}}
        <tr>
          <td colspan="4">
            Nenhum post!
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>